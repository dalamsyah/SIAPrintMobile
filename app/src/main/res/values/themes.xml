<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SIAPrint" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500_siaprint</item>
        <item name="colorPrimaryVariant">@color/blue_700_siaprint</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D32F2F</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
</style>

    <!-- Customize your theme here. -->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/blue_500_siaprint</item>
        <item name="android:textColor">@color/white</item>
        <item name="color">@color/white</item>
        <item name="android:padding">@dimen/padding_button</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="color">@color/black</item>
        <item name="android:textColorHighlight">@color/text_grey</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:padding">@dimen/padding_button</item>
        <item name="colorControlHighlight">@color/purple_500</item>
    </style>

    <style name="Theme.SIAPrint.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SIAPrint.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SIAPrint.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>